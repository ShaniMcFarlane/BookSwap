<div class="book-list-container">

  <div class="search-bar">
  <div class="search-type">
    <%= form_with url: books_path, method: :get, class: "d-flex my-3" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn search-btn" %>
    <% end %>
  </div>
</div>

<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Map
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">BookMap</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>


  <% @books.each do |book| %>

    <%= link_to book_path(book) do %>

      <div class="book-card">
        <%= cl_image_tag book.photo.key, alt: "Card image cap", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
            <p><strong>Author:</strong> <%= book.author %></p>
            <p><strong>Genre:</strong> <%= book.genre %></p>
            <p><strong>Publish Date:</strong> <%= book.publish_date %></p>

        </div>
      </div>
    <% end %>
  <% end %>
</div>
