<h1>Show Page</h1>

<div class="container-for-book-details">
    <div class="book-details">
      <!-- Dummy image for the book cover -->
      <img src="https://via.madeupwebsite.com" alt="book cover" class="book-details-image">

      <!-- Book information: title, author, published date, genre -->
      <div class="book-details-info">
        <h1><%= @book.title %></h1>
        <p>By: <%= @book.author %></p>
        <p>Published: <%= @book.publish_date %></p>
        <p>Genre: <%= @book.genre %></p>
      </div>

      <!-- Action links: Edit, Delete, Back to Index -->
      <div class="book-details-actions">
      <% if current_user == @book.user %>
        <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat" %>
        <% end %>
        <%= link_to "Back to Index", books_path, class: "btn btn-flat" %>
      </div>
    </div>
</div>
