<h1>Show Page</h1>
 <div class="container-for-book-details">
  <% books.each do |book| %>
    <div class="book-details">
        <img src="https://via.placeholder.com/150" alt="book cover", class="book-details-image">

    <div class="book-details-info">
        <h1><%= @book.title %></h1>
        <p>By: <%= @book.author %></p>
        <p>Published: <%= @book.published_date %></p>
        <p>Genre: <%= @book.genre %></p>
      </div>
  <% end %>
    <div class="book-details-actions">
      <%= link_to "Edit", edit_book_path(@book), class: "btn btn-flat" %>
      <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat" %>
      <%= link_to "Back to Index", books_path, class: "btn btn-flat" %>
    </div>
    </div>
</div>
