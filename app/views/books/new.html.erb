<div class="add-book-container">
  <h2>Add Book</h2>

  <div class="add-book-form">
    <%= simple_form_for @book do |f| %>
      <%= f.input :barcode, label: false, as: :string, placeholder: "ISBN", required: true %>
      <%= f.submit "Add Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
