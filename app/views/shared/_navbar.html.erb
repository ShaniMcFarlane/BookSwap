<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-bottom">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <!-- Home Button -->
        <li class="nav-item active">
          <%= link_to "#", class: "nav-link text-center" do %>
            <i class="fas fa-home nav-icon"></i>
            <br>Home
          <% end %>
        </li>

        <!-- Messages Button -->
        <li class="nav-item">
          <%= link_to "#", class: "nav-link text-center" do %>
            <i class="fas fa-comment-dots nav-icon"></i>
            <br>Messages
          <% end %>
        </li>

        <!-- Profile Button -->
        <li class="nav-item">
          <%= link_to "#", class: "nav-link text-center" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "Profile" %>
            <br>Profile
          <% end %>
        </li>

      <% else %>
        <!-- Login Button if not signed in -->
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link text-center" do %>
            <i class="fas fa-sign-in-alt nav-icon"></i>
            <br>Login
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

