<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container-banner-logo">
    <div class="top-banner">
      <h1>BookSwap</h1>
      <%# <%= image_tag("bookswap1.png", style: "width: 50px; height: 50px", alt: "BookSwap")  %>
    </div>
  </div>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-bottom">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <!-- Home Button -->
        <li class="nav-item active">
          <%= link_to books_path, class: "nav-link text-center" do %>
            <i class="fas fa-book nav-icon"></i>
          <% end %>
        </li>

        <!-- Messages Button -->
        <li class="nav-item">
          <%= link_to "#", class: "nav-link text-center" do %>
            <i class="fas fa-message nav-icon"></i>
          <% end %>
        </li>

        <!-- Profile Button -->
        <li class="nav-item">
          <%= link_to user_path(current_user), class: "nav-link text-center" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "Profile" %>
          <% end %>
        </li>

      <% else %>
        <!-- Login Button if not signed in -->
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link text-center" do %>
            <i class="fas fa-sign-in-alt nav-icon"></i>
            <br>Login
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
